<nav>
  <ul>
    <li class='current'>
      <%= link_to "Events", events_path %>
      <%= link_to "Home", events_path, class: 'current action' %>
    </li>
  </ul>
</nav>

<main>

  <% if @events.present? %>
    <ol>

      <% for event in @events do %>
        <li>
          <%= link_to event.title_with_count, event_occurrences_path(event) %>
          <%= link_to "Edit", edit_event_path(event), class: 'action' %>
        </li>
      <% end %>

    </ol>
  <% end %>

  <%= form_for @event do |form| %>
    <%= render 'shared/errors', object: @event %>
    <%= form.label :title, "Title" %>
    <%= form.text_field :title %>
    <%= form.submit "Check" %>
  <% end %>

</main>
