<nav>
  <ul>
    <li class='current'>
      <%= link_to "Events", events_path %>
      <%= link_to "Home", events_path, class: 'current action' %>
    </li>
  </ul>
</nav>

<main>

  <% if @events.present? %>
    <ol>

      <% for event in @events do %>
        <li>
          <p>
            <%= link_to event.title, event_occurrences_path(event) %>
            <% if event.occurrences.present? %>
              <%= time_ago event.occurrences.first.created_at %>
            <% end %>
          </p>
          <p><%= event.occurrences_count %></p>
          <%= link_to "Edit", edit_event_path(event), class: 'action' %>
        </li>
      <% end %>

    </ol>
  <% end %>

  <%= form_for @event do |form| %>
    <h2>Create an event</h2>
    <%= render 'shared/errors', object: @event %>
    <%= form.label :title, "Title" %>
    <%= form.text_field :title %>
    <%= form.submit "Check" %>
  <% end %>

</main>
